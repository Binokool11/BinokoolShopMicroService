@model ProductViewModel
<div class="container mb-2 mt-1">
        <div class="row">
            <div class="col">
                <h3 class="text-light text-center">@Model.Product.Name</h3>
            </div>
            <div class="col card">
                <h3 class="text-end">Price: @Model.Product.Price</h3>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <img src="@Model.Product.ImgUrl" class="icon-product rounded mx-auto d-block" alt="Product"/>
            </div>
            <div class="col text-light text-justify">
                <p>
                    @Model.Product.Description
                </p>
            </div>
        </div>
        <div class="row mb-5 mt-2">
            <div class="col text-center">
                <a class="btn btn-primary" asp-action="Index" asp-controller="Home">Back to home</a>
            </div>
            <div class="col text-center">
                <a class="btn btn-primary" href="!#">Add to card</a>
            </div>
        </div>
    </div>