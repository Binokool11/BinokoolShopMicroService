@model Binokool.Web.Models.ProductDto
<form asp-action="DeleteProduct" method="post"> 
    <input value="@Model.ProductId" name="ProductId" type="numder" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-info">Delete Product</h1>

        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Name</label>
            </div>
            <div class="col-10 pb-3">
                <input name="Name" class="form-control" value="@Model.Name" disabled/>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Category</label>
            </div>
            <div class="col-10 pb-3">
                <input name="CategoryName" class="form-control" value="@Model.CategoryName" disabled/>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Description</label>
            </div>
            <div class="col-10 pb-3">
                <textarea name="Description" class="form-control" rows="5"  disabled>@Model.Description</textarea>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Image URL</label>
            </div>
            <div class="col-10 pb-3">
                <input name="ImgUrl" class="form-control" value="@Model.ImgUrl" disabled/>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Price</label>
            </div>
            <div class="col-10 pb-3">
                <input name="Price" class="form-control" value="@Model.Price" disabled/>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="GetProducts" class="btn-primary btn form-control " >Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
        <div>
        </div>
    </div>
</form>