@model IEnumerable<ProductDto>

<div class="container">
    <div class="title__table">
        <div class="title__table__column title__list__products">Список продуктов</div>
        <div class="title__table__column">
            <a asp-action="CreateProduct">
                <img src="/img/plus.png" alt="add" class="icon">
                <p>Добавить продукт</p>
            </a>
        </div>
    </div>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Название</th>
                <th>Категория</th>
                <th>Цена</th>
                <th>Удаление и изменение продукта</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var productDto in @Model)
            {
                <tr>
                    <td>@productDto.ProductId</td>
                    <td>@productDto.Name</td>
                    <td>@productDto.CategoryName</td>
                    <td>@productDto.Price.ToString("c")</td>
                    <td>
                        <a asp-action="EditProduct" asp-route-id="@productDto.ProductId"><img class="icon icon__edit" src="/img/edit.png"/></a>
                        <a asp-action="DeleteProduct" asp-route-id="@productDto.ProductId"><img class="icon icon__delete" src="/img/delete.png"/></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
